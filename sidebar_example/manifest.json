{
    "manifest_version": 2,
    "name": "Fancy Sidebar",
    "version": "1.0",
    "description": "A fancy-looking sidebar extension.",
    "permissions": ["activeTab"],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"]
      }
    ],
    "action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html",
      "default_title": "Click to open the sidebar"
    }
  }
  